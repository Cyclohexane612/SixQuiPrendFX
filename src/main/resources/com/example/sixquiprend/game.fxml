<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sixquiprend.GameController">
    <children>
        <ImageView>
            <image>
                <Image url="@../../../image/background.jpeg" />
            </image>
        </ImageView>

        <HBox alignment="TOP_RIGHT" spacing="20.0">
            <Region HBox.hgrow="ALWAYS" />
            <VBox spacing="20.0" alignment="TOP_RIGHT">
                <ImageView fitHeight="100.0" fitWidth="225.0">
                    <image>
                        <Image url="@../../../image/LOGO.png" />
                    </image>
                </ImageView>
                <VBox fx:id="playersContainer" spacing="20.0" alignment="TOP_RIGHT">

                </VBox>
            </VBox>
        </HBox>

        <VBox alignment="TOP_RIGHT" spacing="10.0">
            <VBox fx:id="row1" alignment="CENTER" spacing="10.0" />
            <VBox fx:id="row2" alignment="CENTER" spacing="10.0" />
            <VBox fx:id="row3" alignment="CENTER" spacing="10.0" />
            <VBox fx:id="row4" alignment="CENTER" spacing="10.0" />
        </VBox>

        <VBox alignment="BOTTOM_LEFT" spacing="20.0">
            <VBox fx:id="cardPlayersContainer" spacing="20.0">

            </VBox>
        </VBox>
    </children>
</StackPane>



