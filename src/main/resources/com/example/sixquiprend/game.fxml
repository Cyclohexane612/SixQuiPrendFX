<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sixquiprend.GameController">
    <children>
        <ImageView>
            <image>
                <Image url="@../../../image/background.jpeg" />
            </image>
        </ImageView>

        <HBox alignment="TOP_RIGHT" spacing="20.0">
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="TOP_RIGHT" spacing="20.0">
                <ImageView fitHeight="100.0" fitWidth="225.0">
                    <image>
                        <Image url="@../../../image/LOGO.png" />
                    </image>
                </ImageView>
                <VBox fx:id="playersContainer" alignment="TOP_RIGHT" spacing="20.0">

                </VBox>
            </VBox>
        </HBox>

        <VBox alignment="TOP_RIGHT" spacing="10.0">
            <VBox fx:id="row1" alignment="CENTER" spacing="10.0" />
            <VBox fx:id="row2" alignment="CENTER" spacing="10.0" />
            <VBox fx:id="row3" alignment="CENTER" spacing="10.0" />
            <VBox fx:id="row4" alignment="CENTER" spacing="10.0" />
        </VBox>

        <VBox alignment="BOTTOM_LEFT" spacing="20.0">
            <VBox fx:id="cardPlayersContainer" spacing="20.0">

            </VBox>
        </VBox>
        <StackPane fx:id="pileOptions" alignment="BOTTOM_RIGHT" visible="true">
            <Rectangle fill="white" height="181.0" stroke="black" strokeWidth="1" width="126.0" />
            <VBox alignment="BOTTOM_RIGHT" spacing="10.0" style="-fx-padding: 10px;">
                <Label text="Choisissez une pile :" />
                <Button fx:id="buttonRow1" text="Pile 1" textAlignment="CENTER" />
                <Button fx:id="buttonRow2" text="Pile 2" />
                <Button fx:id="buttonRow3" text="Pile 3" />
                <Button fx:id="buttonRow4" text="Pile 4" />
            </VBox>
        </StackPane>






    </children>
</StackPane>
